<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login1</servlet-name>
        <servlet-class>com.netcracker.servlets.LoginServlet1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login1</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login2</servlet-name>
        <servlet-class>com.netcracker.servlets.LoginServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login2</servlet-name>
        <url-pattern>/login2</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ShowData</servlet-name>
        <servlet-class>com.netcracker.servlets.ShowData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowData</servlet-name>
        <url-pattern>/showdata</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>com.netcracker.servlets.SendMail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/sendMail</url-pattern>
    </servlet-mapping>
</web-app>